                                </Button>
                                </StackPanel>

                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <!--time and star button-->
                                <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}"
                               Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}" x:Name="timeText" Margin="0" TextWrapping="Wrap"
                               Grid.Row="0" Padding="8" Grid.Column="0" />
                            <ToggleButton Grid.Column="1" Content="All" Padding="2" HorizontalAlignment="Left"
                                 Template="{DynamicResource StarToggleButton}" Click="StarHandler" />
                           
                                <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}" Text="Sent"
                               x:Name="status" Margin="0" TextWrapping="Wrap" Grid.Row="0" Padding="8"
                               Grid.Column="2" HorizontalAlignment="Right" />
                            </Grid>
                        </Grid>
                        <!--</Border>-->

                    </Grid>
                </Border>
            <!--</Grid>-->

        </DataTemplate>

