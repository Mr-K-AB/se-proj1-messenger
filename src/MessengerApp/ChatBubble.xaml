                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}" Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}"
                           x:Name="timeText" Margin="0" TextWrapping="Wrap" Grid.Row="0" Padding="8"
                           Grid.Column="0" />
                            <!--star button-->
                            <ToggleButton Grid.Column="1" Content="All" Padding="2" HorizontalAlignment="Left"
                             Template="{DynamicResource StarToggleButton}" Click="StarHandler" />
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!--Template for file msg received-->
        <DataTemplate x:Key="FileToUserNotReplyTemplate">
            <Border CornerRadius="20, 20, 20, 0" Background="{DynamicResource SentFilePaint}" Margin="0,0,0,5" MaxWidth="257" HorizontalAlignment="Left">
                <Grid x:Name="FromBubble" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>


                    <Grid Margin="5, 10, 5, 5" Background="Transparent" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" HorizontalAlignment="Left">
                            <TextBlock Foreground="White" Text="{Binding Sender}" x:Name="SenderName" TextWrapping="Wrap"
                                Width="230" FontSize="14" TextAlignment="Left" Padding="8,2,8,2" FontWeight="Bold" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border CornerRadius="8" BorderBrush="{DynamicResource SentFilePaint}"
                                    BorderThickness="5" Background="{DynamicResource SentMsgPaint}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="Images/save.png" Width="25" Height="25" Margin="2" />
                                    <emoji:TextBlock Grid.Column="1" Foreground="{DynamicResource ClearTextPaint}"
                                       Text="{Binding MsgData, UpdateSourceTrigger=PropertyChanged}" x:Name="MainText" TextWrapping="Wrap"
                                        FontSize="16" Padding="8,5,8,5"  />

                                </Grid>
                            </Border>
                            <!-- buttons-->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                                <Button Background="Transparent" BorderBrush="Transparent"
                                        HorizontalAlignment="Right" Width="20" Height="20" Margin="0,0,5,0"
                                        Click="DownloadHandler">
                                    <Image Source="Images/download.png" HorizontalAlignment="Center" />
                                </Button>
                                <!--reply-->
                                <Button Background="Transparent" BorderBrush="Transparent" ToolTip="Reply"
                                        HorizontalAlignment="Right" Width="20" Height="20" Margin="0,0,5,0" Click="ReplyHandler">
                                    <Image Source="Images/undo.png" />
                                </Button>
                                <!--clear reply-->
                                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                                    Width="20" Height="20" Margin="0,0,0,0" Click="UndoReplyHandler" ToolTip="Undo Reply">
                                    <Image Source="Images/redo.png" />
                                </Button>
                            </StackPanel>
                        </Grid>


                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}"
                                Text="{Binding Time}" x:Name="timeText" Margin="0" TextWrapping="Wrap"
                                Grid.Row="0" Padding="8" Grid.Column="0" />
                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}" Text="Sent"
                                x:Name="status" Margin="0" TextWrapping="Wrap" Grid.Row="0" Padding="8"
                                Grid.Column="2" HorizontalAlignment="Right" />
                        </Grid>
                    </Grid>


                </Grid>
            </Border>
        </DataTemplate>

        <!--Template for file msg received-->
        <DataTemplate x:Key="FileToUserTemplate">
            <Border CornerRadius="20, 20, 20, 0" Background="{DynamicResource SentFilePaint}" Margin="0,0,0,5" MaxWidth="257" HorizontalAlignment="Left">
                <Grid x:Name="FromBubble" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>


                    <Grid Margin="5, 10, 5, 5" Background="Transparent" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" HorizontalAlignment="Left" Width="230">
                            <!--reply-->
                            <Border Grid.Column="0" CornerRadius="8" BorderBrush="Transparent"
                                BorderThickness="5" Background="White" Opacity="0.5">
                                <TextBlock 
                                 Text="{Binding ReplyMessage, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" Width="230" FontSize="14" Padding="8,5,8,5" FontStyle="Italic" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <Grid Grid.Row="0" HorizontalAlignment="Left">
                            <TextBlock Foreground="White" Text="{Binding Sender}" x:Name="SenderName" TextWrapping="Wrap"
                            Width="230" FontSize="14" TextAlignment="Left" Padding="8,2,8,2" FontWeight="Bold" />
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border CornerRadius="8" BorderBrush="{DynamicResource SentFilePaint}"
                        BorderThickness="5" Background="{DynamicResource SentMsgPaint}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="Images/save.png" Width="25" Height="25" Margin="2" />
                                    <emoji:TextBlock Grid.Column="1" Foreground="{DynamicResource ClearTextPaint}"
                           Text="{Binding MsgData, UpdateSourceTrigger=PropertyChanged}" x:Name="MainText" TextWrapping="Wrap"
                            FontSize="16" Padding="8,5,8,5"  />

                                </Grid>
                            </Border>
                            <!-- buttons-->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                                <Button Background="Transparent" BorderBrush="Transparent"
                            HorizontalAlignment="Right" Width="20" Height="20" Margin="0,0,5,0"
                            Click="DownloadHandler">
                                    <Image Source="Images/download.png" HorizontalAlignment="Center" />
                                </Button>
                                <!--reply-->
                                <Button Background="Transparent" BorderBrush="Transparent" ToolTip="Reply"
                            HorizontalAlignment="Right" Width="20" Height="20" Margin="0,0,5,0" Click="ReplyHandler">
                                    <Image Source="Images/undo.png" />
                                </Button>
                                <!--clear reply-->
                                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                        Width="20" Height="20" Margin="0,0,0,0" Click="UndoReplyHandler" ToolTip="Undo Reply">
                                    <Image Source="Images/redo.png" />
                                </Button>
                            </StackPanel>
                        </Grid>


                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}"
                    Text="{Binding Time}" x:Name="timeText" Margin="0" TextWrapping="Wrap"
                    Grid.Row="0" Padding="8" Grid.Column="0" />
                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}" Text="Sent"
                    x:Name="status" Margin="0" TextWrapping="Wrap" Grid.Row="0" Padding="8"
                    Grid.Column="2" HorizontalAlignment="Right" />
                        </Grid>
                    </Grid>


                </Grid>
            </Border>
        </DataTemplate>


        <!--Setting up the templates for constructing chat bubbles-->
        <local:ChatBubbleConstructor x:Key="TemplateSelector" SentChatMessageTemplate="{StaticResource MsgFromUserTemplate}"
                  SentFileMessageTemplate="{StaticResource FileFromUserTemplate}"
                  ReceivedChatMessageTemplate="{StaticResource MsgToUserTemplate}"
                  ReceivedFileMessageTemplate="{StaticResource FileToUserTemplate}"
                  SentChatMessageNotReplyTemplate="{StaticResource MsgFromUserNotReplyTemplate}"
                  ReceivedChatMessageNotReplyTemplate ="{StaticResource MsgToUserNotReplyTemplate}"
                  ReceivedFileMessageNotReplyTemplate = "{StaticResource FileToUserNotReplyTemplate}"
                  SentFileMessageNotReplyTemplate = "{StaticResource FileFromUserNotReplyTemplate}"/>

    </UserControl.Resources>


    <!--Grid layout for chat window-->
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid >
            <Border CornerRadius="10" Background="{DynamicResource WindowBackGround}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Opacity="0.2" />
                </Border.Effect>
            </Border>
            <StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="In-Call Messages" FontSize="20" Height="Auto" Margin="5 5 5 5" />
                    </Grid>

                    <!--ListBox, for the Chat History-->
                    <!--<Border BorderBrush="Black" BorderThickness="2" Margin="5,40,5,5" CornerRadius="10">-->

                        <Grid Grid.Row="1" Margin="5,40,5,5" Grid.ColumnSpan="2">
                            <!--<TextBox Text="This is for Received Messages!" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Width="Auto" />-->
                            <!--Using Dynamic Template Selector, dynamically changes the template based on the Message received by the current User or the other user -->
                            <ListBox Background="{DynamicResource WindowBackGround}" HorizontalAlignment="Stretch"
                     BorderBrush="{DynamicResource WindowBackGround}" VerticalAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto" x:Name="MainChat" ScrollViewer.CanContentScroll="False"
                     ItemTemplateSelector="{StaticResource TemplateSelector}" MinHeight="350" MaxHeight="500">
                                <!--Items style-->
                                <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" ClipToBounds="True" SnapsToDevicePixels="True" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListBox.ItemContainerStyle>

                            </ListBox>

                        </Grid>

                    <!--</Border>-->

                    <!--TextBox, for the current message to be sent-->
                    <Grid Grid.Row="2"  VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.ColumnSpan="2" RenderOptions.EdgeMode="Aliased">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="8" Background="Transparent"
                                BorderBrush="Transparent" BorderThickness="2" Margin="5,0,5,0">
                            <Grid VerticalAlignment="Bottom">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <!--<Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="19*"/>
                                            <ColumnDefinition Width="472*"/>
                                        </Grid.ColumnDefinitions>-->
                                        <Border CornerRadius="8" BorderBrush="{DynamicResource TextBoxPaint}"
                                    BorderThickness="0" Background="Transparent"
                                    Opacity="0.6" Margin="0" Grid.ColumnSpan="2">
                                            
                                            <!--Reply text block-->
                                            <TextBlock Name="ReplyTextBox" 
                                           Foreground="Black"
                                           Width="425" MaxHeight="40" FontSize="14" Padding="8,5,8,5" FontStyle="Italic" />
                                        </Border>
                                        
                                    </Grid>
                                    
                                    
                                    <!--message text box-->
                                    
                                        <TextBox Grid.Row="1" Name="SendTextBox" Foreground="White" SpellCheck.IsEnabled="True" Background="#075E54" Width="207"
                                 BorderThickness="0" Height="40" FontSize="16" Padding="8, 8, 10, 5" VerticalAlignment="Bottom" CaretBrush="White" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Left" />
                                    <Border Grid.Row="1" Width="90" Height="40" Background="#075E54"  HorizontalAlignment="Right" CornerRadius="8">
                                        <StackPanel Orientation="Horizontal" >
                                            <Button Background="Transparent" Width="30" Click="UploadHandler" VerticalAlignment="Center" ToolTip="Upload"
                                                    HorizontalAlignment="Center">
                                                <Image Source="Images/file-attach.png" Width="30" Height="20" />
                                            </Button>
                                            <Button Background="Transparent" Width="30" Margin="-3, 0, 0, 0"
                                                Click="SendHandler" ToolTip="Send" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Image Source="Images/sendButton.png" Width="30" Height="20"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>


                    </Grid>

                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
