                <TextBox Text="SentChatMessageTemplate" />
            </Border>
        </DataTemplate>

        <!--Setting up the templates for constructing chat bubbles-->
        <local:ChatBubbleConstructor x:Key="TemplateSelector" SentChatMessageTemplate="{StaticResource MsgFromUserTemplate}"
                  SentFileMessageTemplate="{StaticResource FileFromUserTemplate}"
                  ReceivedChatMessageTemplate="{StaticResource MsgToUserTemplate}"
                  ReceivedFileMessageTemplate="{StaticResource FileToUserTemplate}"
                  SentChatMessageNotReplyTemplate="{StaticResource MsgFromUserNotReplyTemplate}"
                  ReceivedChatMessageNotReplyTemplate ="{StaticResource MsgToUserNotReplyTemplate}"/>
    </UserControl.Resources>


    <!--Grid layout for chat window-->
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid >
            <Border CornerRadius="10" Background="{DynamicResource WindowBackGround}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Opacity="0.2" />
                </Border.Effect>
            </Border>
            <StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="In-Call Messages" FontSize="20" Height="Auto" Margin="5 5 5 5" />
                    </Grid>

                    <!--ListBox, for the Chat History-->
                    <!--<Border BorderBrush="Black" BorderThickness="2" Margin="5,40,5,5" CornerRadius="10">-->

                        <Grid Grid.Row="1" Margin="5,40,5,5" Grid.ColumnSpan="2">
                            <!--<TextBox Text="This is for Received Messages!" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Width="Auto" />-->
                            <!--Using Dynamic Template Selector, dynamically changes the template based on the Message received by the current User or the other user -->
                            <ListBox Background="{DynamicResource WindowBackGround}" HorizontalAlignment="Stretch"
                     BorderBrush="{DynamicResource WindowBackGround}" VerticalAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto" x:Name="MainChat" ScrollViewer.CanContentScroll="False"
                     ItemTemplateSelector="{StaticResource TemplateSelector}" MinHeight="350" MaxHeight="500">
                                <!--Items style-->
                                <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" ClipToBounds="True" SnapsToDevicePixels="True" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListBox.ItemContainerStyle>

                            </ListBox>

                        </Grid>

                    <!--</Border>-->

                    <!--TextBox, for the current message to be sent-->
                    <Grid Grid.Row="2" Height="100"  VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.ColumnSpan="2" RenderOptions.EdgeMode="Aliased">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="8" Background="{DynamicResource TextBoxPaint}"
                                BorderBrush="{DynamicResource TextBoxPaint}" BorderThickness="2" Margin="5,0,5,0">
                            <Grid VerticalAlignment="Bottom">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="19*"/>
                                            <ColumnDefinition Width="472*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="8" BorderBrush="{DynamicResource TextBoxPaint}"
                                    BorderThickness="1" Background="White"
                                    Opacity="0.5" Margin="0" Grid.ColumnSpan="2">
                                            <!--Reply text block-->
                                            <TextBlock Name="ReplyTextBox" 
                                           Foreground="{DynamicResource ReplyTextPaint}"
                                           Width="425" MaxHeight="40" FontSize="16" Padding="8,5,8,5" FontStyle="Italic" />
                                        </Border>
                                        
                                    </Grid>
                                    
                                    
                                    <!--message text box-->
                                    <TextBox Grid.Row="1" Name="SendTextBox" Foreground="White" SpellCheck.IsEnabled="True" Background="Transparent"
                                 BorderThickness="0" Height="30" FontSize="15" VerticalAlignment="Bottom" CaretBrush="White" TextWrapping="Wrap" AcceptsReturn="True" />
                                </Grid>
                            </Grid>
                        </Border>

                        <!--Upload File Button-->
                        <Border Grid.Row="1" Grid.Column="0" CornerRadius="0" Background="White"
                    BorderBrush="Black" BorderThickness="1" Height="30" Width="150"
                    Margin="0,0,0,0" VerticalAlignment="Center">
                            <Button Background="Transparent" HorizontalAlignment="Center" Width="70" Margin="3,3,3,3"
                            Click="UploadHandler" VerticalAlignment="Center" ToolTip="Upload">
                                upload
                            </Button>
                        </Border>

                        <!--Send Message Button-->
                        <Border Grid.Row="1" Grid.Column="1" CornerRadius="0" Background="White"
                    BorderBrush="Black" BorderThickness="1" Height="30" Width="150"
                    Margin="0,0,0, 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Button  Background="Transparent" Width="70" Margin="3,3,3,3"
                        Click="SendHandler" ToolTip="Send" HorizontalAlignment="Center" VerticalAlignment="Center">
                                send
                            </Button>
                        </Border>

                    </Grid>

                    <!--this is for buttons-->
                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
