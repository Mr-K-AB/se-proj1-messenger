<UserControl x:Class="MessengerApp.ChatBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             xmlns:local="clr-namespace:MessengerApp"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="500" >

    <UserControl.Resources>

        <!--Color Brushes used-->
        <SolidColorBrush x:Key="ClearTextPaint" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="WindowBackGround" Color="Transparent" />
        <SolidColorBrush x:Key="ReplyBoxPaint" Color="#071e1e" />
        <SolidColorBrush x:Key="SentMsgPaint" Color="Teal" />
        <SolidColorBrush x:Key="SentFilePaint" Color="#075e54" />
        <SolidColorBrush x:Key="ReceiveMsgPaint" Color="DarkSlateGray" />
        <SolidColorBrush x:Key="ReceiveFilePaint" Color="DarkSlateGray" />
        <SolidColorBrush x:Key="TextBoxPaint" Color="#0f3d3e" />
        <SolidColorBrush x:Key="ReplyTextPaint" Color="#596e5c" />

        <!--Chat TextBox-->
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!--The line which blinks when we are on the text box, to show where we are at, is the CaretBrush-->
                    <Setter Property="CaretBrush">
                        <Setter.Value>
                            <SolidColorBrush Color="White" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Cursor" Value="Arrow" />
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
            </Style.Resources>
        </Style>

        <!--Buttons-->
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Width" Value="90" />
            <Setter Property="Margin" Value="10" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" Color="White" Opacity="10" BlurRadius="20" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--StarButton-->
        <ControlTemplate x:Key="StarToggleButton" TargetType="{x:Type ToggleButton}">
            <Canvas Width="12" Height="12" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                <Path
            x:Name="ButtonPath"
            Width="12"
            Height="12"
            Data="F1 M 17.416,32.25L 32.910,32.25L 38,18L 43.089,32.25L 58.583,32.25L 45.679,41.494L 51.458,56L 38,48.083L 26.125,56L 30.597,41.710L 17.416,32.25 Z "
            Fill="Transparent"
            Stroke="{DynamicResource ClearTextPaint}"
            StrokeThickness="1"
            Stretch="Fill" />
            </Canvas>
            <!--When the star button is checked, fill with yellow color, else white-->
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="ButtonPath" Property="Fill" Value="Yellow" />
                </Trigger>
                <Trigger Property="IsChecked" Value="false">
                    <Setter TargetName="ButtonPath" Property="Fill" Value="transparent" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <DataTemplate x:Key="MsgFromUserNotReplyTemplate">

            <Grid>
                <Border CornerRadius="20, 20, 0, 20" Background="{DynamicResource SentMsgPaint}" Margin="5">
                <Grid x:Name="ToBubble" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>
                    <!--<Border CornerRadius="10, 10, 10, 10" BorderThickness="2" BorderBrush="Black" >-->
                    <Grid Margin="5,10,5,5"  Background="Transparent"  Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" HorizontalAlignment="Left">
                            <TextBlock Foreground="White" Text="{Binding Sender}" x:Name="SenderName" TextWrapping="Wrap"
                   Width="250" FontSize="14" TextAlignment="Left" Padding="8,2,8,2" FontWeight="Bold" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <emoji:TextBlock Foreground="{DynamicResource ClearTextPaint}" Text="{Binding MsgData, UpdateSourceTrigger=PropertyChanged}"
                               x:Name="MainText" TextWrapping="Wrap" Grid.Row="0" Width="250" FontSize="16"
                               Padding="8,5,8,5" Grid.Column="0" />

                            <!--buttons-->
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <!--reply button-->
                                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                    Width="30" Height="20" Margin="0,0,0,0" Click="ReplyHandler" ToolTip="Reply">
                                        <Image Source="Images/undo.png" />
                                    </Button>
                                <!--undo reply-->
                                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                    Width="30" Height="20" Margin="0,0,0,0" Click="UndoReplyHandler" ToolTip="Undo Reply">
                                        <Image Source="redo.png" />
                                    </Button>
                                <!--edit button-->
                                <Button  Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                    Width="30" Height="20" Margin="0,0,0,0" Click="EditHandler" ToolTip="Edit">
                                        <Image Source="Images/pen.png" />
                                    </Button>
                                <!--delete button-->
                                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                    Width="30" Height="20" Margin="0,0,0,0" Click="DeleteHandler" ToolTip="Delete">
                                        <Image Source="delete-chat.png" />
                                    </Button>
                            </StackPanel>

                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--time and star button-->
                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}"
                       Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}" x:Name="timeText" Margin="0" TextWrapping="Wrap"
                       Grid.Row="0" Padding="8" Grid.Column="0" />
                                <ToggleButton Grid.Column="1" Content="All" Padding="2" HorizontalAlignment="Left"
                         Template="{DynamicResource StarToggleButton}" Click="StarHandler" />

                            <TextBlock Opacity="0.8" Foreground="{DynamicResource ClearTextPaint}" Text="Sent"
                       x:Name="status" Margin="0" TextWrapping="Wrap" Grid.Row="0" Padding="8"
                       Grid.Column="2" HorizontalAlignment="Right" />
                        </Grid>
                    </Grid>
                    <!--</Border>-->

                </Grid>
                </Border>
            </Grid>

        </DataTemplate>



